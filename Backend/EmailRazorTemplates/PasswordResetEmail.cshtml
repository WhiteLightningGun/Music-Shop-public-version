@using Backend.Data;
@model BasicEmailModel

<!DOCTYPE html>
<html>
  <head>
    <title>Electric Trojan - Email</title>
  </head>
  <body style="background-color: rgb(57, 104, 156); margin: 0">
    <div
      style="
        background-color: white;
        width: 80%;
        min-height: 100vh;
        margin: auto;
        padding: 2%;
        padding-top: 0.3%;
      "
    >
      <h1
        style="
          text-align: left;
          font-family: Tahoma;
          font-size: 2.5rem;
          color: #000000;
        "
      >
        Message from Electric Trojan...
      </h1>
      <p style="font-family: monospace; font-size: 1.2rem;">
        Hello @Model.Name, here's your password reset code:
      </p>
      <p style="font-family: monospace; font-size: 1.2rem; word-wrap: break-word; overflow-wrap: break-word;">
        @Model.Data
      </p>
      <p style="font-family: monospace; font-size: 1.2rem;">
        Double click the text and copy it to the <a href="https://www.google.co.uk">password reset page</a>.
      </p>
    </div>
  </body>
</html>
@using Backend.Data;
@model BasicEmailModel

<!DOCTYPE html>
<html>
  <head>
    <title>Electric Trojan - Email</title>
  </head>
  <body style="background-color: rgb(255, 255, 255); margin: 0">
    <div
      style="
        background-color: white;
        width: 80%;
        min-height: 100vh;
        margin: auto;
        padding: 2%;
        padding-top: 0.3%;
      "
    >
      <h1
        style="
          text-align: left;
          font-family: Tahoma;
          font-size: 2.5rem;
          color: #000000;
        "
      >
        Message from Electric Trojan...
      </h1>
      <p
        style="
          font-family: Georgia, 'Times New Roman', Times, serif;
          font-size: 1.2rem;
        "
      >
        Hello @Model.Name. Here is your password reset code:
      </p>
      <p
        style="
          font-family: monospace, 'Times New Roman', Times, serif;
          font-size: 1.2rem;
          word-wrap: break-word;
          overflow-wrap: break-word;
          background-color: aliceblue;
          padding: 0.5rem;
          border-radius: 4px;
          max-width: 1200px;
          margin: auto;
        "
      >
        @Model.Data
      </p>
      <p
        style="
          font-family: Georgia, 'Times New Roman', Times, serif;
          font-size: 1.2rem;
        "
      >
        Double click the text and copy it to the
        <a href="https://www.google.co.uk">password reset page</a>.
      </p>
      <p
        style="
          font-family: Georgia, 'Times New Roman', Times, serif;
          font-size: 1.2rem;
        "
      >
        Contact the administrator if you have any questions.
      </p>
      <hr style="border-top: 1px solid lightgray; width: 100%" />
      <p
        style="
          font-family: 'Times New Roman', Times, serif;
          font-size: 1rem;
          color: gray;
        "
      >
        This email came from an unmonitored account.
      </p>
    </div>
  </body>
</html>

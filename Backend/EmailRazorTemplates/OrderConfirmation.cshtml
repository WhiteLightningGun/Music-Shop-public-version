@using Backend.Data; 
@model OrderConfirmationEmailModel

<!DOCTYPE html>
<html>
  <head>
    <title>Electric Trojan - Email</title>
  </head>
  <body style="background-color: rgb(255, 255, 255); margin: 0">
    <div
      style="
        background-color: white;
        width: 80%;
        min-height: 100vh;
        margin: auto;
        padding: 2%;
        padding-top: 0.3%;
      "
    >
      <h1
        style="
          text-align: left;
          font-family: Tahoma;
          font-size: 2.5rem;
          color: #000000;
        "
      >
        Message from Electric Trojan...
      </h1>
      <p
        style="
          font-family: Georgia, 'Times New Roman', Times, serif;
          font-size: 1.2rem;
        "
      >
        Hello @Model.Name. You have ordered the following music:
      </p>

      <ul
        style="
          font-family: monospace, 'Times New Roman', Times, serif;
          font-size: 1.2rem;
          background-color: aliceblue;
          padding: 0.5rem;
          border-radius: 4px;
          max-width: 1200px;
          margin: auto;
          padding-left: 2rem;
        "
      >
        <li>Andrada Neutral</li>
        <li>Necron Attack</li>
        <li>The Feed and Seed Purity Test</li>
      </ul>
      <p
        style="
          font-family: Georgia, 'Times New Roman', Times, serif;
          font-size: 1.2rem;
        "
      >
        Your Paypal order ID is: @Model.OrderID
      </p>
      <p
        style="
          font-family: Georgia, 'Times New Roman', Times, serif;
          font-size: 1.2rem;
        "
      >
        Visit the albums page to
        <a href="https://www.google.co.uk">listen to and download your audio</a
        >.
      </p>
      <p
        style="
          font-family: Georgia, 'Times New Roman', Times, serif;
          font-size: 1.2rem;
        "
      >
        Contact the administrator if you have any questions.
      </p>
      <hr style="border-top: 1px solid lightgray; width: 100%" />
      <p
        style="
          font-family: 'Times New Roman', Times, serif;
          font-size: 1rem;
          color: gray;
        "
      >
        This email came from an unmonitored account.
      </p>
    </div>
  </body>
</html>
